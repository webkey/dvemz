<article class="catalog__item">
	<div class="catalog__inner show-container-js">
		<div class="catalog__figure">
			<div class="catalog__img">
				<img src="img/@@src" alt="@@title" />
			</div>
		</div>
		<div class="catalog__content">
			<div class="catalog__title">@@title</div>
			<div class="catalog__text">
				<ul class="show-list-js" data-show-item="5" data-min-hide-item="2">
					@@text
				</ul>
			</div>
		</div>
		<a href="#" class="catalog__btn-show btn-show-js" data-text="Ещё" data-hide="Свернуть" style="display: none;">&nbsp;</a>
	</div>
</article>